@inherits LayoutComponentBase;
@inject MudThemeProvider _mudThemeProvider;

<MudThemeProvider @ref="@_mudThemeProvider" IsDarkMode="false"/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudAppBar Style="background-color: #1163B7">
    Газпром - Волонтёрство
    <MudSpacer />
    <MudButton Style="@($"color:{Colors.Indigo.Lighten5};")" Variant="Variant.Text" OnClick="@(() => OpenDrawer(Anchor.Start))">Меню</MudButton>
</MudAppBar>
<MudLayout>
            <MudDrawer @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">Меню</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    <MudNavLink Match="NavLinkMatch.All" Href="/">Главная</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Href="/contacts">Контактная информация</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Href="/about-organization">Об организации</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{ 
    bool open;
    Anchor anchor;
    
    void OpenDrawer(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;
    }
}